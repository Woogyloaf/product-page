.social-media
		margin 17px
		text-align center
		a
			display inline-block
			text-decoration none
			margin-right 15px
form
	.block
		width 195px
		display flex
		justify-content space-between
		+mqDevice($table)
			width 220px

	.social-media
		display none
	+mqDevice($table)
		width 268px
		display block
		float right
		padding-left 25px
		hr
			width 220px
	+mqDevice($desktop)
		hr
			width 302px
		.social-media
			display block
	+mqDevice($desktop)
		width 334px
		float right
		padding-left 30px
		.social-media
			display block
			display flex
			align-items center
			.share
				margin-right 15px
				display block
				+mqDevice($table)
					display none
				+mqDevice($mobile)
					display none
	h4	
		text-transform uppercase
		font-size 14px
		font-weight 600
		color #4c4c4c
		margin-top 23px
		margin-bottom 0px
			+mqDevice($desktop)
				margin-top 28px
		span
			color #f3546a
	p.price
		font-size 36px
		color #272727
		font-weight 600
		margin-top 20px
		margin-bottom 0px
		display -moz-inline-box
		
		+mqDevice($mobile)
			span
				display none
		+mqDevice($desktop)
			color #f3546a
			span
				margin-right 30px
				color #c8c8c8
				display inline-block
				text-decoration: line-through;
		
	input[type="submit"]
		width 280px
		height 50px
		margin-top 20px
		margin-bottom 25px
		background none
		border 3px solid #464646
		font-size 14px
		font-weight 600
		text-transform uppercase
		outline none
		+mqDevice($table)
			width 220px
	.style-select
		width 195px
		float left
		// background-position 90 position
		// background url("http://www.scottgood.com/jsg/blog.nsf/images/arrowdown.gif") no-repeat 95% 50%;
		background url("../images/input-arrow.png") no-repeat;
		position relative
		background-position 174px 17px
		+mqDevice($table)
			width 220px
			background-position 194px 17px
		select
			padding-left 10px
			height 40px
			width 195px
			color #646464
			background none
			box-shadow none
			background-color transparent
			background-image none
			appearance none
			border 1px solid #969696
			&:focus 
				outline: none
			+mqDevice($table)
				width 220px

.product-description
	letter-spacing 1.5px
	margin-bottom 62px
	+mqDevice($desktop)
		width 500px
		clear left
		margin-top -50px
		hr
			display none
	.social-media
		+mqDevice($table)
			display none
		+mqDevice($desktop)
			display none
			div hr
				display none
				
	h2
