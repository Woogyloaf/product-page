//////////////////////////
.params
	padding-top 25px
	+mqDevice($table)
		padding-top 0
	.text
		height 40px
		line-height 40px
		width 85px
		// background olive
		float left
		font-size 15px
		font-weight 600
		+mqDevice($table)
			line-height normal
			height auto
	.block
		height 40px
		+mqDevice($table)
			clear both
.color-white
.color-light-blue
.color-light-violet
.color-light-pink
	width 40px
	height 40px
	// border 1px solid #f09
	display inline-block
	font-size 0px
	box-sizing border-box
	&.active
		border 2px solid #d2d2d2
		
