html, body
	font-family $open-sans
	box-sizing: border-box;
	
.product
	width 320px
	padding 20px
	margin 0 auto
	outline none
	button 
		outline none
		+mqDevice($table)
			display block
		+mqDevice($desktop)
			display block
	+mqDevice($table)
		width 768px
		
		.share
			display none
		.hidden
			display none
		.product-description h2, .product-description p.code
			padding-top 23px
			clear left
	+mqDevice($desktop)
		width 1024px
		.hidden
			display none
	hr
		margin 0
	h1
		font-size 24px
		font-weight 400
	.image-thumbnail
			border 1px solid #e8e8e8
			background-size contain
			background-repeat no-repeat
			background-position center center
			display block
			background #fff
			height 180px
			overflow hidden
			+mqDevice($table)
				width 460px
				height 300px
				float left
			+mqDevice($desktop)
				width 650px
				height 420px
				float left
	.slick-track
		.slick-slide
			outline none

