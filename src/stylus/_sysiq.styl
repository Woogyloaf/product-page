//////////////////////////
// Product Slider
//////////////////////////
.product-slider
	outline none
	.slick-slide
		img
			margin-right 39px
	.img-slider
		.box-info
			left 0px
			top 20px
			right 0px
			bottom 0px
			background rgba(0, 0, 0, .3)
			position absolute
			margin-right 0
			text-align center
	button
		top 50%
		position absolute
		z-index 2
		transform translate(-50%, -50%)
		border none
		color transparent
		outline none
		background transparent
		&.slick-prev
			left 21px
			sprite($s-slider_arrow_prev_320)
			// background #f09 url('') position repeat
		&.slick-next
			right 12px
			sprite($s-slider_arrow_next_320)
.read-more
	color #191919;
	text-transform uppercase
	border none
	text-align left
	border-top 3px solid #191919
	padding-top 10px
	background none
	width 98px
	font-size 10px
	display block
	position relative
	margin-top 30px
	&:after
		content url(../images/input-arrow.png)
		margin-right value
		position absolute 
		right 0px
		bottom 3px
	+mqDevice($table)
		display block
	+mqDevice($mobile)
		display none
		.procedure-details 
			display block


.radio-color
	input[type="radio"]
		display none
 	label
		display inline-block
		background-color #ddd
		padding 4px 11px
		font-family Arial
		font-size 16px
	input[type="radio"]:checked
		& + label
			display inline-block
			box-sizing border-box
			border 2px solid #d2d2d2
