	background white
.color-light-blue
	background #add4eb
.color-light-violet
	background #bbafd9
.color-light-pink
	background #ebadc3
.color
	.block
		width 195px
		display flex
		justify-content space-between
		+mqDevice($table)
			width 220px
.block
	select
		height 40px
		width 195px
		color #646464
		background none
